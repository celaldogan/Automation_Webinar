pipeline {
    agent any 
    environment {
        PATH = "/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin:/opt/aws/bin"
    }
    stages {
        stage('Clone Repository') { 
            steps {
                sh ' rm -rf ./*'
                sh 'git clone https://github.com/codygreen/Automation_Webinar.git'
            }
        }
        stage('Build Web App') { 
            steps {
                sh 'cd Automation_Webinar/code/3* && terraform get --update && terraform init && terraform apply --auto-approve'
            }
        }
        state('Configure Web App') {
            steps {
                sh 'ansible-playbook -i ./inventory ./demo_app.yaml'
            }
        }
    }
}